tasks = []

def show_menu():
    print("\n1. Add task\n2. Remove task\n3. View tasks\n4. Exit")

while True:
    show_menu()
    choice = input("Choose an option: ")
    
    if choice == "1":
        task = input("Enter task: ")
        tasks.append(task)
    elif choice == "2":
        task = input("Enter task to remove: ")
        if task in tasks:
            tasks.remove(task)
        else:
            print("Task not found")
    elif choice == "3":
        print("Tasks:", tasks)
    elif choice == "4":
        break
    else:
        print("Invalid choice")
