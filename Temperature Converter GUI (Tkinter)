import tkinter as tk

def convert():
    c = float(entry.get())
    f = (c*9/5)+32
    label_result.config(text=f"{f} Â°F")

root = tk.Tk()
root.title("Celsius to Fahrenheit")
entry = tk.Entry(root)
entry.pack()
btn = tk.Button(root, text="Convert", command=convert)
btn.pack()
label_result = tk.Label(root, text="")
label_result.pack()
root.mainloop()
